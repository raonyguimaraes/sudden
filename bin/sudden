#!/usr/bin/env python3

import argparse

from sudden.main import Sudden

parser = argparse.ArgumentParser()
parser.add_argument('options', help='install package', nargs='?')
parser.add_argument('-i', dest='softwarename', required=False, metavar='conda', help='any tool to be installed')

args = parser.parse_args()
print(args)

if args.options == 'update':
    s = Sudden()
    s.update()

